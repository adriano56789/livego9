# Configurações do Servidor
PORT=3000
HTTPS_PORT=3001
NODE_ENV=development

# Banco de Dados MongoDB
MONGO_URI=mongodb://localhost:27017/livego

# Autenticação JWT
JWT_SECRET=seu_segredo_jwt_aqui
JWT_EXPIRES_IN=30d

# SRS (Streaming Server)
SRS_API_URL=http://localhost:1985
SRS_RTMP_URL=rtmp://localhost/live
SRS_HTTP_URL=http://localhost:8080/live

# Configurações de Domínio (para produção)
DOMAIN=localhost
PRODUCTION_DOMAIN=seu-dominio.com.br

# Configurações de E-mail (opcional)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu-email@exemplo.com
SMTP_PASS=sua-senha
SMTP_FROM='LiveGo <noreply@seu-dominio.com>'

# Configurações de Upload (opcional)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB

# Configurações de Segurança
CORS_ORIGINS=http://localhost:5173,http://seu-dominio.com
RATE_LIMIT_WINDOW_MS=900000 # 15 minutos
RATE_LIMIT_MAX=100 # 100 requisições por janela de tempo

# Configurações de Cache (opcional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hora

# Configurações de Log (opcional)
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# Configurações de Notificação (opcional)
FCM_SERVER_KEY=sua_chave_fcm_aqui

# Configurações de Pagamento (opcional)
MERCADO_PAGO_ACCESS_TOKEN=seu_token_do_mercado_pago

# Configurações de CDN (opcional)
CDN_BASE_URL=https://cdn.seu-dominio.com

# Configurações de Analytics (opcional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
